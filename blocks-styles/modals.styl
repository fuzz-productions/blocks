//
// STRUCTURE
//

.modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600px;
  max-height: 90%;
  z-index: 1001;

  border-radius: 3px;

  .button {
    margin-left: 16px;
    margin-top: 16px;
  }
}

.modal-section {
  padding: 24px 40px;
}

.modal-header {
  padding-top: 24px;
  padding-left: 40px;
  padding-right: 40px;
}

.modal-footer {
  padding-bottom: 24px;
  padding-left: 40px;
  padding-right: 40px;
}

.modal-body {
  padding-left: 40px;
  padding-right: 40px;
}

.modal-buttons {
  display: flex;
  justify-content: flex-end;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.5;
  z-index: 1000;
}

.modal-close {
  position: absolute;
  top: 16px;
  right: 16px;
  width: 16px;
  height: 16px;
  cursor: pointer;
  border: none;
  border-radius: 50%;
  border: 1px solid transparent;

  &:focus, &.focus, &:active, &.active {
    transform: scale(1.25);
  }
}

//
// THEME
//

.modal {
  border: solid 1px $ui-04;
  background-color: $ui-00;
  box-shadow: 0 3px 6px 0 $ui-04;
}

.modal-overlay {
  background-color: $ui-07;
}

.modal-close {
  background-color: $ui-05;

  &:hover, &.hover {
    background-color: $ui-04;
  }

  &:focus, &.focus, &:active, &.active {
    outline: none;
    background-color: $brand-02;
  }
}
