//
// STRUCTURE
//

.modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600px;
  max-height: 90%;
  padding: 40px;
  z-index: 1001;

  border-radius: 3px;
}

.modal-buttons {
  display: flex;
  justify-content: flex-end;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.5;
  z-index: 1000;
}

.modal-close {
  width: 16px;
  height: 16px;
  cursor: pointer;
  flex: 0 0 auto;
  border: none;
  border-radius: 50%;
  border: 1px solid transparent;
}

//
// THEME
//

.modal {
  border: solid 1px var(--ui-04);
  background-color: var(--ui-01);
  box-shadow: 0 3px 6px 0 var(--ui-04);
}

.modal-overlay {
  background-color: var(--ui-05);
}

.modal-close {
  background-color: transparent;
  background-image: url('../svgs/icon-close.svg');
  background-repeat: no-repeat;
  background-size: 12px 12px;
  background-position: 1px 1px;

  &:focus {
    outline: none;
    border: 1px solid var(--brand-02);
  }
}
