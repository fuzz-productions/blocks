.blx-modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600px;
  max-height: 90%;
  padding: 40px;
  z-index: 1001;

  border-radius: 3px;

  border: solid 1px $ui-04;
  background-color: $ui-00;
  box-shadow: 0 3px 6px 0 $ui-04;

  .blx-icon-close {
    float: right;
    &:focus {
      outline: none;
      border: 1px solid $selection;
    }
  }

  .blx-modal-buttons {
    display: flex;
    justify-content: flex-end;
  }
}

.blx-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.5;
  z-index: 1000;

  background-color: $ui-07;
}
