.blx-sortable-list {
  background: transparent;
  list-style: none;
  margin: 0;
  padding: 0;

  .blx-sortable-list-item {
    position: relative;
    display: flex;
    justify-content: space-between;
    border-color: transparent;
    border-style: solid;
    border-width: 2px 0 2px 0;

    &.blx-dragging {
      background-color: $focus;
    }
    &.blx-dragover-top {
      border-top: 2px solid $light-02;
    }
    &.blx-dragover-bottom {
      border-bottom: 2px solid $light-02;
    }

    .blx-icon-drag {
      position: relative;
      right: 0;
      margin: 8px;
      cursor: move;
      background-color: $primary-00;

      &:hover, &.blx-hover {
        background-color: $primary-01;
      }
    }
  }
}
