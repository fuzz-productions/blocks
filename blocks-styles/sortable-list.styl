.blx-sortable-list {
  background: transparent;
  max-width: 320px;
  list-style: none;
  margin: 0;
  padding: 0;
  
  .blx-sortable-list-item {
    position: relative;
    display: flex;
    justify-content: space-between;
    
    &.dragging {
      background-color: $selection;
    }
    &.dragover {
      background-color: $ui-04;
    }
    
    .blx-drag-icon {
      position: absolute;
      right: 0;
      margin-top: 8px;
      margin-right: 24px;
      cursor: move;
      background-color: $ui-07;
    }
  }
}
