//
// STRUCTURE
//

.text-field {
  display: inline-flex;
  flex-direction: column;
  margin: 12px 16px;
  
  label {
    font-size: 16px;
    line-height: 20px;
  }
  
  input[type="text"] {
    width: 300px;
    height: 40px;
    font-size: 16px;
    line-height: 20px;
    border-radius: 3px;
    padding: 11px 16px 9px 16px;
  }
}

.text-field-container {
  position: relative;
}

.text-field-prefix, .text-field-suffix {
  font-size: 16px;
  line-height: 20px;
  padding-top: 11px;
  padding-bottom: 9px;
}

.text-field-prefix {
  position: absolute;
  left: 16px;
  user-select: none;
  
  & ~ input[type="text"] {
    padding-left: 40px;
  }
}

.text-field-suffix {
  position: absolute;
  right: 8px;
  user-select: none;
  
  & ~ input[type="text"] {
    padding-right: 40px;
  }
}

.invalid-label-message {
  font-size: 12px;
  line-height: 18px;
}

//
// THEME
//

.text-field {
  label {
    color: var(--text-01, $text-01);
  }
  
  input[type="text"] {
    background-color: var(--ui-01, $ui-01);
    border: 1px solid var(--ui-03, $ui-03);
    
    &.invalid {
      border: 1px solid var(--support-01, $support-01);
    }

    &:hover {
      border: 1px solid var(--ui-03, $ui-03);
      box-shadow: 0 0 0 1px var(--ui-03, $ui-03);
    }

    &:focus {
      outline: none;
      border: 1px solid var(--brand-02, $brand-02);
    }

    &.disabled {
      opacity: 0.5;
      pointer-events: none;
    }
  }
}

.text-field-prefix, .text-field-suffix {
  color: var(--text-01, $text-01);
}

.invalid-label-marker {
  color: var(--support-01, $support-01);
}

.invalid-label-message {
  color: var(--text-02, $text-02);
}
