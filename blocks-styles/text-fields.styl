.blx-text-field-container {
  position: relative;
}

.blx-text-field {
  display: inline-flex;
  flex-direction: column;
  margin-right: 20px;
  margin-bottom: 19px;
  min-width: 150px;
  max-width: 484px;
  width: 300px;

  label {
    margin-bottom: 6px;
  }
  
  input {
    height: 40px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  textarea {
    resize: none;
  }

  input, textarea {
    width: 100%;
    font-size: 14px;
    line-height: 18px;
    border-radius: $base-border-radius;
    padding: 11px 16px;

    background-color: $ui-00;
    border: 1px solid $ui-03;

    &.blx-invalid {
      border: 1px solid $error;
    }

    &:hover, &.blx-hover {
      border: 1px solid $ui-03;
      box-shadow: 0 0 0 1px $ui-03;
    }

    &:focus, &.blx-focus {
      outline: none;
      border: 1px solid $success;
    }

    &:read-only {
      pointer-events: none;
    }

    &.blx-disabled {
      opacity: 0.5;
      pointer-events: none;
    }
  }

  .blx-text-field-prefix, .blx-text-field-suffix {
    font-size: 16px;
    line-height: 20px;
    padding-top: 11px;
    padding-bottom: 9px;

    color: $text-01;
  }

  .blx-text-field-prefix {
    position: absolute;
    left: 16px;
    user-select: none;

    & ~ input {
      padding-left: 40px;
    }
  }

  .blx-text-field-suffix {
    position: absolute;
    right: 8px;
    user-select: none;

    & ~ input {
      padding-right: 40px;
    }
  }
  
  .blx-invalid-text-field-marker,
  .blx-invalid-text-field-message,
  .blx-text-field-helper {
    font-size: 12px;
    line-height: 16px;
  }

  .blx-invalid-text-field-marker {
    color: $text-01;
  }

  .blx-invalid-text-field-message {
    color: $error;
  }
  
  .blx-text-field-helper {
    color: $text-02;
  }
}
