//
// STRUCTURE
//

.button {
  height: 40px;
  padding: 10px 16px;
  text-decoration: none;
}

.button-small {
  height: 32px;
  padding: 6px 16px;
}

.button, .button-small {
  border-radius: 7px;
  cursor: pointer;

  font-size: 14px;
  font-family: $sans-serif-font-family-medium;
  text-align: center;

  margin: 12px 16px 12px 0;

  &:last-child {
    margin-right: 0;
  }

  &:hover {
    text-decoration: none;
  }

  &.disabled {
    opacity: 0.5;
    pointer-events: none;
  }
}

//
// THEME
//

.button, .button-small {
  &.primary {
    background-color: $brand-01;
    border: 1px solid $brand-01;
    color: $ui-01;

    &:hover {
      background-color: $brand-02;
      border: 1px solid $brand-02;
      color: $ui-01;
    }

    &.disabled {
      background-color: $ui-05;
      border: 1px solid $ui-05;
    }
  }
  
  &.secondary {
    background-color: $ui-02;
    border: 1px solid $ui-05;
    color: $ui-05;

    &:hover {
      background-color: $brand-01;
      border: 1px solid $brand-01;
      color: $ui-01;
    }
  }
}

.button:focus, .button-small:focus, .button:active, .button-small:active {
  outline: none;
  &.primary {
    border: 1px solid $brand-02;
    box-shadow: inset 0 0 0 1px $ui-01;
    background-color: $brand-02;
  }

  &.secondary {
    border: 1px solid $brand-01;
    box-shadow: inset 0 0 0 1px $ui-01;
    background-color: $brand-01;
    color: $ui-01;
  }
}
