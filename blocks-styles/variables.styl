@font-face {
  font-family: FranklinGothicNormal;
  font-weight: normal;
  src: url("../fonts/FG0.otf") format("opentype");
}

@font-face {
  font-family: FranklinGothicMedium;
  font-weight: medium;
  src: url("../fonts/FG2.otf") format("opentype");
}

@font-face {
  font-family: FranklinGothicBold;
  font-weight: bold;
  src: url("../fonts/FG4.otf") format("opentype");
}

//
// font  variables
//

$sans-serif-font-family-normal = FranklinGothicNormal;
$sans-serif-font-family-medium = FranklinGothicMedium;
$sans-serif-font-family-bold = FranklinGothicBold;

$normal-weight = 400;
$medium-weight = 500;
$bold-weight = 700;

//
// theme colors
//

$brand-01-hex = #00b07d;
$brand-02-hex = #75e6c9;
$brand-03-hex = #6f6bf8;
$brand-04-hex = #fdb100;

$ui-01-hex = #ffffff;
$ui-02-hex = #f5faf8;
$ui-03-hex = #f0f6f3;
$ui-04-hex = #d6e2e0;
$ui-05-hex = #8ca59c;

$text-01-hex = #2b3836;
$text-02-hex = #686f6d;

$support-01-hex = #ec4f07;

:root {
  --brand-01: $brand-01-hex;
  --brand-02: $brand-02-hex;
  --brand-03: $brand-03-hex;
  --brand-04: $brand-04-hex;

  --ui-01: $ui-01-hex;
  --ui-02: $ui-02-hex;
  --ui-03: $ui-03-hex;
  --ui-04: $ui-04-hex;
  --ui-05: $ui-05-hex;

  --text-01: $text-01-hex;
  --text-02: $text-02-hex;

  --support-01: $support-01-hex;
}

$brand-01 = var(--brand-01, $brand-01-hex);
$brand-02 = var(--brand-02, $brand-02-hex);
$brand-03 = var(--brand-03, $brand-03-hex);
$brand-04 = var(--brand-04, $brand-04-hex);

$ui-01 = var(--ui-01, $ui-01-hex);
$ui-02 = var(--ui-02, $ui-02-hex);
$ui-03 = var(--ui-03, $ui-03-hex);
$ui-04 = var(--ui-04, $ui-04-hex);
$ui-05 = var(--ui-05, $ui-05-hex);

$text-01 = var(--text-01, $text-01-hex);
$text-02 = var(--text-02, $text-02-hex);

$support-01 = var(--support-01, $support-01-hex);

$success-color = $brand-01-hex;
$information-color = $brand-03-hex;
$warning-color = $brand-04-hex;
$error-color = $support-01-hex;


//
// TEXT VARIABLES
//
$base-font-size = 16px;

//
// COMPONENT VARIABLES
//

// common variables
$base-border-radius = 7px;

//
// button variables
//

// button structure
$button-height = 40px;
$button-small-height = 28px;

$button-top-padding = 12px;
$button-side-padding = 16px;

$button-small-top-padding = 4px;
$button-small-side-padding = 12px;

$button-font-size = 16px;
$button-small-font-size = 16px;

// button colors
$button-focus-inset-color = $ui-01;

$primary-button-background-color = $brand-01;
$primary-button-hover-background-color = $brand-02;
$primary-button-disabled-background-color = $ui-05;
$primary-button-focus-background-color = $brand-02;

$primary-button-border-color = $brand-01;
$primary-button-hover-border-color = $brand-02;
$primary-button-disabled-border-color = $ui-05;
$primary-button-focus-border-color = $brand-02;

$primary-button-text-color = $ui-01;
$primary-button-hover-text-color = $ui-01;
$primary-button-focus-text-color = $ui-01;

$secondary-button-background-color = $ui-02;
$secondary-button-hover-background-color = $brand-01;
$secondary-button-disabled-background-color = $ui-02;
$secondary-button-focus-background-color = $brand-01;

$secondary-button-border-color = $ui-05;
$secondary-button-hover-border-color = $brand-01;
$secondary-button-disabled-border-color = $ui-05;
$secondary-button-focus-border-color = $brand-01;

$secondary-button-text-color = $ui-05;
$secondary-button-hover-text-color = $ui-01;
$secondary-button-focus-text-color = $ui-01;

