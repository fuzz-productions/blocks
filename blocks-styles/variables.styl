@font-face {
  font-family: FranklinGothicNormal;
  font-weight: normal;
  src: url("../fonts/FG0.otf") format("opentype");
}

@font-face {
  font-family: FranklinGothicMedium;
  font-weight: medium;
  src: url("../fonts/FG2.otf") format("opentype");
}

@font-face {
  font-family: FranklinGothicBold;
  font-weight: bold;
  src: url("../fonts/FG4.otf") format("opentype");
}

//
// font  variables
//

$sans-serif-font-family-normal = FranklinGothicNormal;
$sans-serif-font-family-medium = FranklinGothicMedium;
$sans-serif-font-family-bold = FranklinGothicBold;

$normal-weight = 400;
$medium-weight = 500;
$bold-weight = 700;

//
// theme colors
//
$brand-01 = #00b07d;
$brand-02 = #75e6c9;
$brand-03 = #6f6bf8;
$brand-04 = #fdb100;

$ui-01 = #ffffff;
$ui-02 = #f5faf8;
$ui-03 = #f0f6f3;
$ui-04 = #d6e2e0;
$ui-05 = #8ca59c;

$text-01 = #2b3836;
$text-02 = #686f6d;

$support-01 = #ec4f07;
