.text-field-with-dropdown {
  display: flex;
  align-items: flex-end;
  width: 100%;

  label {
    font-size: 16px;
    line-height: 20px;
  }

  input {
    height: 40px;
    font-size: 16px;
    line-height: 20px;
    border-radius: $base-border-radius 0 0 $base-border-radius;
    padding: 11px 16px 9px 16px;
  }
}


.text-field-with-dropdown .dropdown-wrapper .dropdown {
  display: inline-block;
  min-width: initial;
}

.text-field-with-dropdown .dropdown-wrapper .dropdown .dropdown-trigger {
  border-radius: 0 $base-border-radius $base-border-radius 0;
  padding: 0 42px 0 16px;
}