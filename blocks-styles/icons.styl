//
// STRUCTURE
//

.icon, .icon-info {
  display: inline-block
  width: 24px;
  height: 16px;
  cursor: pointer;
  flex: 0 0 auto;
  border: none;
  border-radius: 50%;
  border: 1px solid transparent;
}

.icon-big {
  display: inline-block
  width: 32px;
  height: 32px;
  cursor: pointer;
  flex: 0 0 auto;
  border: none;
  border: 1px solid transparent;
}

//
// THEME
//

.icon, .icon-big {
  background-color: $brand-01;
}

.icon-info {
  background-color: $information;
}

.icon, .icon-info {
  background-repeat: no-repeat;
  background-size: 12px 12px;
  background-position: 1px 1px;
}

.icon-big {
  background-repeat: no-repeat;
  background-size: 24px 24px;
  background-position: 1px 1px;
}

.icon-down-arrow {
  height: 12px;
  mask: url('../svgs/icon-down.svg') no-repeat 50% 50%;
}

.icon-up-arrow {
  mask: url('../svgs/icon-up.svg') no-repeat 50% 50%;
}

.icon-back {
  mask: url('../svgs/icon-back.svg') no-repeat 50% 50%;
}

.icon-forward {
  mask: url('../svgs/icon-forward.svg') no-repeat 50% 50%;
}

.icon-drag {
  mask: url('../svgs/icon-drag.svg') no-repeat 50% 50%;
}

.icon-check {
  mask: url('../svgs/icon-check.svg') no-repeat 50% 50%;
}

.icon-plus {
  background-color: $brand-01;
  mask: url('../svgs/icon-plus.svg') no-repeat 50% 50%;

  &:hover {
    background-color: $selection;
  }

  &:focus {
    background-color: $selection;
  }
}

.icon-close {
  mask: url('../svgs/icon-close.svg') no-repeat 50% 50%;
}
