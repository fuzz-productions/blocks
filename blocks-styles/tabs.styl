//
// STRUCTURE
//

.horizontal-tabs, .vertical-tabs {
  user-select: none;

  label {
    position: relative;
    margin-right: 32px;
    cursor: pointer;

    input[type="radio"] {
      position: absolute;
      left: -9999px;
      opacity: 0;
      cursor: pointer;
    }
  }
}

.vertical-tabs {
  display: inline-flex;
  flex-direction: column;
  align-items: flex-start;
  user-select: none;
  padding: 20px 32px;

  label {
    position: relative;
    cursor: pointer;

    input[type="radio"] {
      position: absolute;
      left: -9999px;
      opacity: 0;
      cursor: pointer;
      text-decoration: none;
    }
  }
}

.horizontal-tabs {
  display: inline-flex;
}

.vertical-tabs {
  display: block;
  font-size: 16px;
  font-family: $sans-serif-font-family-medium;
  line-height: 20px;
  text-align: left;
  height: 40px;
  padding-top: 16px;
  margin-bottom: 8px;
  background: transparent;
  border-top: none;
  border-left: none;
  border-right: none;
  border-bottom: 4px solid transparent;

.horizontal-tabs .tab-item {
  padding: 4px 0;
}

.vertical-tabs .tab-item {
  display: block;
  margin-left: -12px;
  padding: 8px;
}

//
// THEME
//

.horizontal-tabs, .vertical-tabs {
  background-color: transparent;
}

.tab-item {
  border: none;
  
  &.inactive {
    color: $text-02;
  }
  
  &.active {
    color: $brand-01;
  }
  
  &:hover, &.hover {
    color: $text-01;
  }

  & > label input[type="radio"]:focus + .tab-title {
    border-bottom: 4px solid $brand-02;
  }
}

.horizontal-tabs .tab-item {
  border-bottom: 4px solid transparent;
  &:hover, &.hover {
    border-bottom: 4px solid $ui-04;
  }
  &.active {
    border-bottom: 4px solid $brand-01;
  }

  & > label input[type="radio"]:focus + .tab-title {
    border-bottom: 4px solid $brand-02;
  }
}

.vertical-tabs .tab-item {
  border-left: 4px solid transparent;
  &:hover, &.hover {
    border-left: 4px solid $ui-04;
  }
  &.active {
    border-left: 4px solid $brand-01;
  }
  &:focus, &:active {
    border-left: 4px solid $selection;
  }
  ^[0] > input[type="radio"]:focus,
  ^[0] > input[type="radio"]:active {
    border-left: 4px solid $selection;
  }
}
