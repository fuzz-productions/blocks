//
// STRUCTURE
//

.horizontal-tabs, .vertical-tabs {
  user-select: none;
  
  li, label {
    min-height: 32px;
    margin: 4px 32px 4px 0;
  }
  
  label {
    input[type="radio"] {
      position: absolute;
      left: -9999px;
      opacity: 0;
      cursor: pointer;
    }
  }
  
  &.disabled {
    opacity: 0.5;
    pointer-events: none;
  }
  
  .tab-item {
    height: 32px;
    vertical-align: middle;
    
    font-weight: $medium-weight;
    font-size: 16px;
    line-height: 24px;
    
    &:hover, &.hover {
      cursor: pointer;
      text-decoration: none;
    }
  }
}

.horizontal-tabs {
  display: inline-flex;
}

.vertical-tabs {
  display: block;
}

.horizontal-tabs .tab-item {
  padding: 4px 0;
}

.vertical-tabs .tab-item {
  display: block;
  margin-left: -12px;
  padding: 4px 8px;
}

//
// THEME
//

.horizontal-tabs, .vertical-tabs {
  background-color: transparent;
  
  input[type="radio"] + .tab-item {
    color: $text-02;
    
    &.focus {
      color: $selection;
    }
    
    &:hover, &.hover {
      color: $text-01;
    }
  }
  
  input[type="radio"]:focus + .tab-item,
  input[type="radio"]:active + .tab-item {
    color: $selection;
  }
  
  input[type="radio"]:checked + .tab-item {
    color: $brand-01;
  }
}

.tab-item {
  border: none;
  
  &.inactive {
    color: $text-02;
  }
  
  &.active {
    color: $brand-01;
  }
  
  &:hover, &.hover {
    color: $text-01;
  }
  
  &:focus, &:active, &.focus {
    outline: none;
    color: $selection;
    background: transparent;
  }
}

.horizontal-tabs .tab-item {
  border-bottom: 4px solid transparent;
  &:hover, &.hover {
    border-bottom: 4px solid $ui-04;
  }
  &.active {
    border-bottom: 4px solid $brand-01;
  }
  &:focus, &:active, &.focus {
    border-bottom: 4px solid $selection;
  }
  ^[0] > input[type="radio"]:focus,
  ^[0] > input[type="radio"]:active {
    border-bottom: 4px solid $selection;
  }
}

.vertical-tabs .tab-item {
  border-left: 4px solid transparent;
  &:hover, &.hover {
    border-left: 4px solid $ui-04;
  }
  &.active {
    border-left: 4px solid $brand-01;
  }
  &:focus, &:active, &.focus {
    border-left: 4px solid $selection;
  }
  ^[0] > input[type="radio"]:focus,
  ^[0] > input[type="radio"]:active {
    border-left: 4px solid $selection;
  }
}

.horizontal-tabs {
  input[type="radio"]:checked + .tab-item {
    border-bottom: 4px solid $brand-01;
  }
}

.vertical-tabs {
  input[type="radio"]:checked + .tab-item {
    border-left: 4px solid $brand-01;
  }
}
