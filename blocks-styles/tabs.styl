// tab specific variables
$tab-default-color = $primary-00;
$tab-hover-color = $primary-01;
$tab-focus-color = $focus;

$tab-default-border = 4px solid $tab-default-color;
$tab-hover-border = 4px solid $tab-hover-color;
$tab-focus-border = 4px solid $tab-focus-color;
$tab-inactive-border = 4px solid transparent;

// tab styles
.blx-horizontal-tabs, .blx-vertical-tabs {
  user-select: none;
  background-color: transparent;
  
  label {
    input[type="radio"] {
      position: absolute;
      left: -9999px;
      opacity: 0;
    }
  }
  
  .blx-tab-item {
    min-height: 32px;
    height: 32px;
    vertical-align: middle;
    
    font-weight: $medium-weight;
    font-size: 14px;
    line-height: 18px;
    
    cursor: pointer;
    text-decoration: none;
    background-color: transparent;
    
    color: $dark-02;
    border: none;
    
    &:active, &.blx-active {
      color: $tab-default-color;
    }
    &:hover, &.blx-hover {
      text-decoration: none;
      color: $tab-hover-color;
    }
    &:focus, &.blx-focus {
      outline: none;
      color: $tab-focus-color;
      background: transparent;
    }
  }
  
  input[type="radio"]:checked + .blx-tab-item {
    color: $tab-default-color;
  }
  input[type="radio"]:focus + .blx-tab-item {
    color: $tab-focus-color;
  }
  input[type="radio"]:hover + .blx-tab-item {
    color: $tab-hover-color;
  }
}

.blx-horizontal-tabs {
  display: inline-flex;
  
  input[type="radio"]:checked + .blx-tab-item {
    border-bottom: $tab-default-border;
  }
  input[type="radio"]:focus + .blx-tab-item {
    border-bottom: $tab-focus-border;
  }
  input[type="radio"]:hover + .blx-tab-item {
    border-bottom: $tab-hover-border;
  }
  
  .blx-tab-item {
    margin: 10px 16px;
    padding: 4px 0;
    
    border-bottom: $tab-inactive-border;
    &:active, &.blx-active {
      border-bottom: $tab-default-border;
    }
    &:hover, &.blx-hover {
      border-bottom: $tab-hover-border;
    }
    &:focus, &.blx-focus {
      border-bottom: $tab-focus-border;
    }
  }
  
  &.blx-disabled {
    .blx-tab-item {
      border-bottom: $tab-inactive-border;
    }
  }
}

.blx-vertical-tabs {
  display: block;
  
  input[type="radio"]:checked + .blx-tab-item {
    border-left: $tab-default-border;
  }
  input[type="radio"]:focus + .blx-tab-item {
    border-left: $tab-focus-border;
  }
  input[type="radio"]:hover + .blx-tab-item {
    border-left: $tab-hover-border;
  }
  
  .blx-tab-item {
    display: block;
    margin: 8px 0 8px -12px;
    margin-left: -12px;
    padding: 4px 8px;
    
    border-left: $tab-inactive-border;
    &:active, &.blx-active {
      border-left: $tab-default-border;
    }
    &:hover, &.blx-hover {
      border-left: $tab-hover-border;
    }
    &:focus, &.blx-focus {
      border-left: $tab-focus-border;
    }
  }
  
  &.blx-disabled {
    .blx-tab-item {
      border-left: $tab-inactive-border;
    }
  }
}

.blx-disabled {
  cursor: default;
  opacity: 0.5;
  pointer-events: none;
  
  input[type="radio"] {
    pointer-events: none;
  }
  
  .blx-tab-item {
    color: $dark-02;
    border-color: transparent;
  }
}
