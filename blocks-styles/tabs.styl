.blx-horizontal-tabs, .blx-vertical-tabs {
  user-select: none;
  background-color: transparent;
  
  label {
    input[type="radio"] {
      position: absolute;
      left: -9999px;
      opacity: 0;
      cursor: pointer;
    }
  }
  
  &.disabled {
    opacity: 0.5;
    pointer-events: none;
  }
  
  .blx-tab-item {
    min-height: 32px;
    height: 32px;
    vertical-align: middle;
    
    font-weight: $medium-weight;
    font-size: 16px;
    line-height: 24px;
    
    color: $text-02;
    border: none;
    
    &.blx-active {
      color: $brand-01;
    }
    
    &:hover, &.hover {
      cursor: pointer;
      text-decoration: none;
      color: $interactive;
    }
    
    &:focus, &:active, &.focus {
      outline: none;
      color: $selection;
      background: transparent;
    }
  }
  
  input[type="radio"]:focus + .blx-tab-item,
  input[type="radio"]:active + .blx-tab-item {
    color: $selection;
  }
  
  input[type="radio"]:checked + .blx-tab-item {
    color: $brand-01;
  }
}

.blx-horizontal-tabs {
  display: inline-flex;
  
  .blx-tab-item {
    margin: 10px 16px;
    padding: 4px 0;
    
    border-bottom: 4px solid transparent;
    &:hover, &.hover {
      border-bottom: 4px solid $interactive;
    }
    &.blx-active {
      border-bottom: 4px solid $brand-01;
    }
    &:focus, &:active, &.focus {
      border-bottom: 4px solid $selection;
    }
    ^[0] > input[type="radio"]:focus,
    ^[0] > input[type="radio"].focus,
    ^[0] > input[type="radio"]:active {
      border-bottom: 4px solid $selection;
    }
  }
  
  input[type="radio"]:checked + .blx-tab-item {
    border-bottom: 4px solid $brand-01;
  }
}

.blx-vertical-tabs {
  display: block;
  
  .blx-tab-item {
    display: block;
    margin: 8px 0 8px -12px;
    margin-left: -12px;
    padding: 4px 8px;
    
    border-left: 4px solid transparent;
    &:hover, &.hover {
      border-left: 4px solid $interactive;
    }
    &.blx-active {
      border-left: 4px solid $brand-01;
    }
    &:focus, &:active, &.focus {
      border-left: 4px solid $selection;
    }
    ^[0] > input[type="radio"]:focus,
    ^[0] > input[type="radio"].focus,
    ^[0] > input[type="radio"]:active {
      border-left: 4px solid $selection;
    }
  }
  
  input[type="radio"]:checked + .blx-tab-item {
    border-left: 4px solid $brand-01;
  }
}
