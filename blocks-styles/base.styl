//
// theme colors
//
$brand-01 = #00b07d;
$brand-02 = #75e6c9;
$brand-03 = #6f6bf8;
$brand-04 = #fdb100;

$ui-01 = #ffffff;
$ui-02 = #f5faf8;
$ui-03 = #f0f6f3;
$ui-04 = #d6e2e0;
$ui-05 = #8ca59c;

$text-01 = #2b3836;
$text-02 = #686f6d;

$support-01 = #ec4f07;

html, body {
  min-height: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  font-family: $sans-serif-font-family-normal;
}

body {
  --brand-01: $brand-01;
  --brand-02: $brand-02;
  --brand-03: $brand-03;
  --brand-04: $brand-04;

  --ui-01: $ui-01;
  --ui-02: $ui-02;
  --ui-03: $ui-03;
  --ui-04: $ui-04;
  --ui-05: $ui-05;

  --text-01: $text-01;
  --text-02: $text-02;

  --support-01: $support-01;
}

* {
  box-sizing: border-box;
}
