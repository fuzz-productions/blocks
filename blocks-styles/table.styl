.blx-table {
  margin: 12px 16px;
  border-collapse: collapse;
  color: $dark-00;
  border: 1px solid $light-01;
  
  .blx-table-header-row {
    height: 56px;
    font-size: 16px;
    font-weight: $medium-weight;
    line-height: 20px;
    background-color: $light-01;
  }
  
  .blx-table-row {
    height: 48px;
    font-size: 16px;
    font-weight: $normal-weight;
    line-height: 20px;
    
    background-color: $secondary-01;
    border-top: 1px solid $light-01;

    &:hover {
      cursor: pointer;
      background-color: $light-01;
      border: 1px solid $primary-00;
    }
  }
  
  .blx-table-header-cell, .blx-table-cell {
    padding: 0 28px;
    border: none;
    text-align: left;

    &:first-child {
      padding-left: 24px;
    }
    &:last-child {
      padding-right: 24px;
    }
  }

  .blx-table-cell {
    text-align: left;

    &.numeric {
      text-align: right;
    }
  }
}
