//
// STRUCTURE
//

.dropdown {
  position: relative;
  display: flex;
  flex-direction: column;
  min-width: 150px;
}

.dropdown-wrapper {
  display: inline-block;
  margin: 24px 0;
}

.dropdown-description {
  position: absolute;
  top: -32px;
}

.dropdown-trigger {
  position: relative;
  height: 40px;
  border-radius: 7px;
  font-size: 16px;
  font-family: $sans-serif-font-family-medium;
  line-height: 20px;
  text-align: left;
  padding: 0 48px 0 16px;
  cursor: pointer;

  &.disabled {
    opacity: 0.5;
    pointer-events: none;
  }

  &::after {
    position: absolute;
    top: 12px;
    right: 16px;
    content: "";
    display: inline-block;
    vertical-align: middle;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    border: 1px solid transparent;
    mask: url('../svgs/icon-down.svg') no-repeat 50% 50%;
    transition: transform 300ms;
  }

  &.active::after {
    transform: rotate(180deg);
    transition: transform 300ms;
  }
}

.dropdown-menu {
  position: absolute;
  top: 100%;
  left: 0;
  width: 100%;
  border-radius: 7px;
  z-index: 1;
  margin: 8px 0;
  padding: 8px 0;
  list-style-type: none;
}

.dropdown-item {
  * {
    width: 100%;
    height: 100%;
    padding: 8px 16px;
    cursor: pointer;
    background: transparent;
    border: none;
    font-size: 16px;
    font-family: $sans-serif-font-family-medium;
    line-height: 20px;
    text-align: left;
  }
}

//
// THEME
//

.dropdown-trigger {
  background-color: $ui-01;
  border: 1px solid $ui-03;
  color: $ui-05;

  &::after {
    background-color: $brand-01;
  }

  &:hover, &.hover {
    border: 2px solid $ui-03;
  }

  &:focus, &.focus {
    outline: none;
    border: 1px solid $brand-02;
    color: $text-01;
  }
}

.dropdown-menu {
  background-color: $ui-01;
  border: solid 1px $ui-04;
  box-shadow: 0 3px 6px 0 $ui-04;
}

.dropdown-item {
  background-color: transparent;
  * {
    &:focus, &.focus, &:active, &.active {
      outline: none;
      color: $ui-01;
      background-color: $brand-01;
    }

    &:hover, &.hover {
      color: $ui-01;
    }
  }

  &:hover, &.hover {
    background-color: $brand-01;
    color: $ui-01;
  }
}
