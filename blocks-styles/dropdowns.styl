//
// STRUCTURE
//

.dropdown-select {
  min-width: 200px;
  height: 40px;
  font-size: 16px;
  line-height: 20px;
  border-radius: 3px;
  padding: 11px 16px 9px 16px;
  margin: 12px 16px;

  &:hover {
    cursor: pointer;
  }
}

.dropdown-menu, .dropdown-bubble {
  position: absolute;
  display: none;
  z-index: 5;
  border-radius: 3px;
}

.dropdown-bubble {
  top: 24px;
  left: -16px;
  width: 132px;
}

.dropdown-menu.active, .dropdown-bubble.active {
  display: block;
}

.dropdown-trigger {
  border: none;
  outline: none;
  padding: 0;
  margin: 0;
  background-color: transparent;
  cursor: pointer;
}

.dropdown-triangle-outer, .dropdown-triangle-inner {
  width: 0;
  height: 0;
  position: absolute;
}

.dropdown-triangle-outer {
  top: -10px;
  left: 15px;
  border-left: 10px solid transparent;
  border-right: 10px solid transparent;
}

.dropdown-triangle-inner {
  top: -9px;
  left: 16px;
  border-left: 9px solid transparent;
  border-right: 9px solid transparent;
}

.dropdown-content {
  span, a, button {
    display: block;
    border: none;
    width: 100%;
    font-family: $sans-serif-font-family-normal;
    font-size: 16px;
    text-align: left;
    line-height: 20px;
    padding: 10px 16px;
  }
}

.dropdown-item {
  &:hover, &:active {
    text-decoration: none;
    cursor: pointer;

    &:first-child {
      border-top-left-radius: 3px;
      border-top-right-radius: 3px;
    }

    &:last-child {
      border-bottom-left-radius: 3px;
      border-bottom-right-radius: 3px;
    }
  }

  &:focus {
    outline: none;
  }
}

//
// THEME
//
.dropdown-menu, .dropdown-bubble {
  background-color: var(--ui-01, $ui-01);
  border: 1px solid var(--ui-04, $ui-04);
  box-shadow: 0 3px 6px 0 var(--ui-04, $ui-04);
}

.dropdown-triangle-outer {
  border-bottom: 10px solid var(--ui-04, $ui-04);
}

.dropdown-triangle-inner {
  border-bottom: 9px solid var(--ui-01, $ui-01);
}

.dropdown-item {
  background-color: transparent;
  color: var(--text-01, $text-01);

  &:hover, &:active {
    color: var(--ui-01, $ui-01);
    background-color: var(--brand-01, $brand-01);
  }
}

.dropdown-select {
  background-color: var(--ui-01, $ui-01);
  border: 1px solid var(--ui-04, $ui-04);

  &:hover {
    border: 1px solid var(--ui-03, $ui-03);
    box-shadow: 0 0 0 1px var(--ui-03, $ui-03);
  }

  &:focus {
    outline: none;
    border: 1px solid var(--brand-02, $brand-02);
  }

  &.disabled {
    opacity: 0.5;
    pointer-events: none;
  }
}
