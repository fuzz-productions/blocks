//
// STRUCTURE
//

.header {
  padding: 0 5%;
  flex: 0 0 auto;
}

.cbre {
  display: inline;
  height: 24px;
  padding: 2px 35px;
  mask: url('../svgs/cbre.svg') no-repeat;
}

.blocks-title {
  font-size: 36px;
  line-height: 25px;
  font-family: $sans-serif-font-family-bold;
  margin-left: 16px;
  position: relative;
  top: 4px;
}

.blocks-heading {
  margin-bottom: 70px;
}

.design-page {
  height: 100%;
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.design-page-content {
  overflow-y: auto;
  padding: 0 5%;
}

.design-page-section {
  margin-top: 32px;
}

.design-page-container {
  width: 100%;
}

.snippet-container {
  overflow: hidden;
  border-radius: 7px;
  margin: 16px 0;
  
  & > div {
    padding: 12px 16px;
    border-radius: 7 px;
    overflow-x: auto;
  }
  
  .highlight {
    margin: 0;
    * {
      font-size: 14px;
      font-family: "Courier New";
    }
  }
}

.left-nav-panel {
  width: 400px;
  height: 100%;
  overflow-y: auto;
  padding: 32px 32px;
  
  ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
  }
  
  .body-caps {
    margin-top: 16px;
  }
}

.doc-section {
  margin-bottom: 40px;
}

.doc-section > div {
  margin: 40px 0 16px 0;
}

.doc-definition-title {
  flex: 0 0 150px;
}

.doc-definition-value {
  flex: 1;
}

.doc-state-title {
  flex: 0 0 150px;
}

.doc-state-content {
  flex: 0 0 250px;
}

.doc-state-title, .doc-state-content {
  margin-right: 24px;
  margin-bottom: 40px;
}

.color-card {
  display: inline-block;
  margin: 0 32px 32px 0;
  min-width: 128px;
  width:128px;
  max-width:128px;
  box-sizing: border-box;
  
  .color-card-background {
    width: 128px;
    height: 80px;
    display: table;
  }
  
  .color-card-title {
    width: 128px;
    height: 32px;
    display: table;
  }
  
  .color-card-name, .color-card-value {
    width: 128px;
    display: table-cell;
    vertical-align: middle;
    text-align: center;
  }
}

//
// THEME
//

.cbre {
  background-color: $brand-01;
}

.blocks-title {
  color: $brand-01;
}

.snippet-container {
  border: 2px solid $ui-04;
  
  & > div:last-child {
    background-color: $ui-02;
  }
}

.left-nav-panel {
  background-color: $ui-03;
  box-shadow: 2px 0 3px 0 rgba(43, 56, 54, 0.15);
  
  .category-title {
    padding: 16px 0;
    border-bottom: 2px solid $ui-04;
  }
}

.doc-section {
  border-bottom: solid 1px $ui-04;
}

.color-card {
  .color-card-background {
  }
  
  .color-card-title {
    border: 1px solid $text-02;
    color: $text-02;
  }
  
  .color-card-value {
    color: $text-02;
  }
}
