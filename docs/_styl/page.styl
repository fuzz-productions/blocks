//
// STRUCTURE
//

.header {
  position: relative;
  padding: 32px 5% 0 5%;
}

.design-page {
  height: 100%;
  width: 100%;
  padding: 32px 5%;
  overflow-y: auto;
}

.design-page-section {
  padding-bottom: 50px;
  .title, .tab {
    margin-right: 25px;
  }
}

.design-page-container {
  width: 100%;
}

.snippet-container {
  overflow: hidden;
  border-radius: 7px;
  margin: 16px 0;
  
  & > div {
    padding: 12px 16px;
    border-radius: px;
    overflow-x: auto;
  }
  
  & > div:last-child {
    background-color: var(--ui-02);
  }
  
  .highlight {
    margin: 0;
  }
}

//
// THEME
//

.header {
  background-color: var(--ui-04);
}

.snippet-container {
  border: 2px solid var(--ui-04);
}
