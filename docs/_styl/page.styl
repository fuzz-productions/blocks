//
// STRUCTURE
//

.header {
  position: relative;
  padding: 32px 5% 0 5%;
}

.design-page {
  height: 100%;
  width: 100%;
  padding: 32px 5%;
  overflow-y: auto;
}

.design-page-section {
  padding-bottom: 50px;
  .title, .tab {
    margin-right: 25px;
  }
}

.design-page-container {
  width: 100%;
}

.snippet-container {
  overflow: hidden;
  border-radius: 7px;
  margin: 16px 0;
  
  & > div {
    padding: 12px 16px;
    border-radius: 7 px;
    overflow-x: auto;
  }
  
  .highlight {
    margin: 0;
  }
}

.left-nav-panel {
  width: 320px;
  height: 100%;
  overflow-y: auto;
  padding: 24px 32px;
  
  ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
    
    li {
      padding: 8px 16px;
    }
  }
}

//
// THEME
//

.header {
  background-color: var(--ui-04, $ui-04);
}

.snippet-container {
  border: 2px solid var(--ui-04, $ui-04);
  
  & > div:last-child {
    background-color: var(--ui-02, $ui-02);
  }
}

.left-nav-panel {
  background-color: var(--ui-03, $ui-03);
}
