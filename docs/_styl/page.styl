html, body {
  min-height: 100%;
  height: 100%;
}

.header {
  padding: 32px 5% 8px 5%;
  flex: 0 0 auto;
}

.blocks-logo {
  display: block;
  width: 31px;
  height: 40px;
  mask: url('../svgs/blocks-logomark.svg') no-repeat;
  background-color: $text-01;
}

.blocks-title {
  font-size: 36px;
  line-height: 25px;
  font-weight: $bold-weight;
  margin-left: 16px;
  position: relative;
  top: 4px;
}

.blocks-heading {
  margin-bottom: 70px;
}

.landing-content {
  padding: 50px 0 40px 0;
}

.default-spacing {
  margin: 24px 0;
}

.design-page {
  height: 100%;
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.design-page-content {
  overflow-y: auto;
  padding: 0 5%;
}

.design-page-section {
  margin-top: 32px;
}

.design-page-container {
  width: 100%;
}

.principles-container {
  p {
    margin: 12px 0;
  }
  
  h5 {
    margin-top: 32px;
  }

  & > div {
    flex: 1 1 33%;
    margin-right: 5%;
    
    &:last-child {
      margin-right: 0;
    }
  }
}

.tall-content {
  height: 225px;
}

.snippet-container {
  overflow: hidden;
  border-radius: 7px;
  margin: 16px 0;
  
  border: 2px solid $ui-04;
  
  & > div {
    padding: 12px 16px;
    border-radius: 7 px;
    overflow-x: auto;
    
    &:last-child {
      background-color: $ui-02;
    }
  }
  
  .highlight {
    margin: 0;
    * {
      font-size: 14px;
      font-family: "Courier New";
    }
  }
}

.left-nav-panel {
  width: 210px;
  height: 100%;
  overflow-y: auto;
  padding: 32px 12px 32px 24px
  background-color: $ui-02;
  
  ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
  }
  
  .blx-body-caps {
    margin-top: 16px;
  }
  
  .category-title {
    padding: 16px 0;
    border-bottom: 2px solid $ui-04;
  }
}

.doc-section {
  margin-bottom: 40px;
  border-bottom: solid 1px $ui-04;
}

.doc-section > div {
  margin: 40px 0 16px 0;
}

.doc-definition-title {
  flex: 0 0 150px;
}

.doc-definition-value {
  flex: 1;
}

.doc-state-title {
  flex: 0 0 150px;
}

.doc-state-content {
  flex: 1 0 150px;
}

.doc-state-title, .doc-state-content {
  margin: 24px 24px 24px 0;
}

.color-card {
  display: inline-block;
  margin: 0 32px 32px 0;
  box-sizing: border-box;
  
  .color-card-background {
    width: 150px;
    height: 90px;
    border: 1px solid #686f6d;
  }
  
  .color-card-title {
    width: 150px;
    height: 60px;
    padding: 8px;
    border: 1px solid #686f6d;
    border-width: 0 1px 1px 1px;
    color: $text-02;
  }
}

.sortable-list-preview {
  width: 300px;
  
  .blx-sortable-list {
    background-color: $ui-04;
  }
  
  .blx-sortable-list-item {
    padding: 8px 16px;
  }
}
