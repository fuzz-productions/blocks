// button styles
.blx-button {
  position: relative;
  display: flex;
  justify-content: space-around;

  height: $button-height;
  max-width: 480px;
  min-width: 44px;
  margin: 0;
  padding: 10px 18px; // specified padding - 2px to account for border
  text-decoration: none;

  &.blx-button-icon {
    padding: 10px; // specified padding - 2px to account for border
  }

  border-radius: $base-border-radius;
  cursor: pointer;

  blxH5();
  line-height: 20px;
  text-align: center;

  box-shadow: $default-box-shadow;

  &.blx-with-margin {
    margin: 12px;
  }

  &:focus, &.blx-focus {
    outline: none;
    text-decoration: none;
  }

  &:hover, &.blx-hover {
    text-decoration: none;
  }

  span {
    blxTruncateText();
    line-height: 20px;
    
    &:not(:first-child) {
      margin-left: 12px;
    }

    &:not(:last-child) {
      margin-right: 12px;
    }
  }
}

.blx-primary {
  background-color: $button-primary-background-color;
  border: $button-primary-default-border;
  color: $button-primary-text-color;

  &:focus, &.blx-focus {
    border: $button-primary-focus-border;
    background-color: $button-primary-focus-background-color;
    color: $button-primary-focus-text-color;

    &::before {
      content: "";
      position: absolute;
      left: 0;
      top: 0;
      border-radius: 5px;
      width: calc(100% - 2px);
      height: calc(100% - 2px);
      border: $button-primary-focus-inner-border;
    }
  }

  &:hover, &.blx-hover {
    background-color: $button-primary-hover-background-color;
    border: $button-primary-hover-border;
    color: $button-primary-hover-text-color;

    &::before {
      content: none;
    }
  }

  &:active, &.blx-active {
    background-color: $button-primary-active-background-color;
    border: $button-primary-active-border;
    color: $button-primary-active-text-color;
    &::before {
      content: none;
    }
  }
}

