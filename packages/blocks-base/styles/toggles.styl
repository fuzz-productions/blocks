// toggle specific variables
$toggle-default-text-color = $dark-02;
$toggle-selected-text-color = $secondary-00;

$toggle-default-background-color = $secondary-00;
$toggle-selected-background-color = $primary-00;
$toggle-hover-background-color = $primary-01;
$toggle-focus-background-color = $primary-01;
$toggle-active-background-color = $primary-02;

$toggle-default-border = 1px solid $light-01;
$toggle-selected-border = 1px solid $toggle-selected-background-color;
$toggle-hover-border = 1px solid $toggle-hover-background-color;
$toggle-focus-border = 2px solid $focus;
$toggle-focus-inner-border = 1px solid $secondary-00;
$toggle-active-border = 1px solid $toggle-active-background-color;

// toggle styles
.blx-toggle {
  height: 40px;
  font-size: 14px;
  line-height: 40px;
  
  &.blx-with-margin {
    margin: 12px 16px;
  }

  &.blx-disabled {
    opacity: 0.5;
    pointer-events: none;
  }

  .blx-toggle-container {
    position: relative;

    .blx-toggle-text {
      position: relative;
      padding: 10px 30px;
      cursor: pointer;
      border: $toggle-default-border;
      background-color: $toggle-default-background-color;
      box-shadow: $default-box-shadow;
    }

    input {
      position: absolute;
      left: -9999px;
      opacity: 0;
      cursor: pointer;

      &:checked ~ .blx-toggle-text {
        background-color: $toggle-selected-background-color;
        border: $toggle-selected-border;
        color: $toggle-selected-text-color;
      }

      &:focus ~ .blx-toggle-text, &.blx-focus ~ .blx-toggle-text {
        padding: 10px 29px;
        background-color: $toggle-focus-background-color;
        border: $toggle-focus-border;
        color: $toggle-selected-text-color;
        &::after {
          content: "";
          position: absolute;
          left: 0;
          top: 0;
          width: calc(100% - 2px);
          height: calc(100% - 2px);
          border: $toggle-focus-inner-border;
        }
      }

      &:hover ~ .blx-toggle-text, &.blx-hover ~ .blx-toggle-text {
        padding: 10px 30px;
        background-color: $toggle-hover-background-color;
        border: $toggle-hover-border;
        color: $toggle-selected-text-color;
        box-shadow: none;
        &::after {
          display: none;
        }
      }

      &:active ~ .blx-toggle-text, &.blx-active ~ .blx-toggle-text {
        padding: 10px 30px;
        background-color: $toggle-active-background-color;
        border: $toggle-active-border;
        color: $toggle-selected-text-color;
        box-shadow: none;
        &::after {
          display: none;
        }
      }
    }

    &:first-of-type .blx-toggle-text {
      border-radius: $base-border-radius 0 0 $base-border-radius;
      border-right: 1px solid transparent;
      &::after {
        border-radius: $base-border-radius 0 0 $base-border-radius;
      }
    }

    &:last-of-type .blx-toggle-text {
      border-radius: 0 $base-border-radius $base-border-radius 0;
      border-left: 1px solid transparent;
      &::after {
        border-radius: 0 $base-border-radius $base-border-radius 0;
      }
    }
  }
}
