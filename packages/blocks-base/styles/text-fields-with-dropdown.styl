.blx-text-field-with-dropdown {
  display: flex;
  align-items: flex-end;
  width: 100%;
  margin-right: 20px;
  margin-bottom: 19px;

  input {
    border-radius: $base-border-radius 0 0 $base-border-radius;
  }
  
  .blx-text-field {
    margin-right: 0;
    margin-bottom: 0;
  }
  
  .blx-dropdown {
    display: inline-block;
    min-width: initial;
  }
  
  .blx-dropdown-trigger {
    border-radius: 0 $base-border-radius $base-border-radius 0;
  }
}
