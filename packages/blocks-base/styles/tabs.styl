// tab specific variables
$tab-default-color = $dark-00;
$tab-selected-color = $primary-00;
$tab-hover-color = $primary-01;
$tab-focus-color = $focus;

$tab-vertical-border-width = 4px;
$tab-horizontal-border-width = 2px;

$tab-default-vertical-border = $tab-vertical-border-width solid $tab-selected-color;
$tab-default-horizontal-border = $tab-horizontal-border-width solid $tab-selected-color;
$tab-hover-vertical-border = $tab-vertical-border-width solid $tab-hover-color;
$tab-hover-horizontal-border = $tab-horizontal-border-width solid $tab-hover-color;
$tab-focus-vertical-border = $tab-vertical-border-width solid $tab-focus-color;
$tab-focus-horizontal-border = $tab-horizontal-border-width solid $tab-focus-color;
$tab-inactive-vertical-border = $tab-vertical-border-width solid transparent;
$tab-inactive-horizontal-border = $tab-horizontal-border-width solid transparent;

// tab styles
.blx-horizontal-tabs, .blx-vertical-tabs {
  list-style: none;
  input[type="radio"] {
    position: absolute;
    left: -9999px;
    opacity: 0;
  }
}

.blx-tab-item {
  user-select: none;
  background-color: transparent;
  position: relative;
  vertical-align: middle;
  
  font-weight: $medium-weight;
  font-size: 14px;
  line-height: 32px;
  blxTruncateText()
  
  cursor: pointer;
  text-decoration: none;
  
  color: $dark-02;
  
  &::after {
    content: '';
    position: absolute;
    background-color: transparent;
  }
  &:hover, &.blx-hover {
    text-decoration: none;
    color: $tab-hover-color;
    background-color: transparent;
  }
}

.blx-horizontal-tabs {
  display: inline-flex;
  
  .blx-tab-item {
    padding: 10px 16px;
    
    &::after {
      bottom: 4px;
      left: 16px;
      width: calc(100% - 32px);
      height: $tab-horizontal-border-width;
    }
  }
  
  input[type="radio"]:focus + .blx-tab-item,
  .blx-tab-item:focus,
  .blx-tab-item.blx-focus {
    background-color: transparent;
    color: $tab-default-color;
    outline: 2px solid $tab-focus-color;
  }
}

.blx-vertical-tabs {
  display: inline-block;
  
  .blx-tab-item {
    display: block;
    min-height: 48px;
    height: 48px;
    line-height: 48px;
    padding: 0 16px 0 48px;
    
    &::after {
      top: 8px;
      left: 28px;
      height: 32px;
      width: $tab-vertical-border-width;
      color: transparent;
    }
  }
  
  input[type="radio"]:focus + .blx-tab-item,
  .blx-tab-item:focus,
  .blx-tab-item.blx-focus {
    background-color: transparent;
    color: $tab-default-color;
    outline: 1px solid $tab-focus-color;
  }
}

input[type="radio"]:checked + .blx-tab-item,
.blx-tab-item.blx-active {
  color: $tab-selected-color;
  &::after {
    background-color: $tab-selected-color;
  }
}

input[type="radio"]:focus + .blx-tab-item,
.blx-tab-item:focus, .blx-tab-item.blx-focus {
  background-color: transparent;
  outline: 2px solid $tab-focus-color;
  color: $tab-default-color;
  &::after {
    background-color: transparent;
  }
}

input[type="radio"]:hover + .blx-tab-item,
.blx-tab-item.blx-hover {
  color: $tab-hover-color;
  &::after {
    background-color: $tab-hover-color;
  }
}

.blx-sub-tab {
  display: block;
  text-decoration: none;
  font-size: 14px;
  line-height: 18px;
  padding: 6px 12px 6px 48px;
  color: $light-02;
  cursor: pointer;
  
  &:hover, &.blx-hover {
    color: $primary-01;
  }
  
  &:active, &.blx-active {
    color: $primary-00;
  }

  &:focus, &.blx-focus {
    background: transparent;
    color: $dark-00;
    outline: 1px solid $tab-focus-color;
  }
}

input[type="radio"]:checked + .blx-sub-tab,
.blx-sub-tab.blx-active {
  color: $tab-selected-color;
}

input[type="radio"]:focus + .blx-sub-tab,
.blx-sub-tab:focus, .blx-sub-tab.blx-focus {
  background-color: transparent;
  outline: 2px solid $tab-focus-color;
  color: $tab-default-color;
}

input[type="radio"]:hover + .blx-sub-tab,
.blx-sub-tab.blx-hover {
  color: $tab-hover-color;
}
