.blx-accordion-section {
  position: relative;
  width: 100%;
  overflow: hidden;

  input[type=checkbox][name='blx-accordion-tab'] {
    position: absolute;
    opacity: 0;
    z-index: -1;

    &:checked + label::before {
      transform: rotate(90deg);
      transform-origin: center;
    }
  }

  .blx-accordion-trigger {
    position: relative;
    display: block;
    padding: 8px 16px;
    cursor: pointer;
    
    background-color: $light-01;

    & > p {
      font-weight: $medium-weight;
    }

    &::before {
      position: absolute;
      left: 0;
      top: 0;
      display: block;
      width: 16px;
      height: 16px;
      padding: 12px 16px;
      transition: all 0.25s;
      content: "";
      background-image: url('../svgs/icon-forward.svg');
      background-repeat: no-repeat;
      background-position: center;
    }

    & > * {
      margin: 0 0 0 32px;
    }
  }
}

.blx-accordion-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.25s;
  
  background-color: $light-01;

  .blx-accordion-trigger {
    background-color: transparent;
  }
}
