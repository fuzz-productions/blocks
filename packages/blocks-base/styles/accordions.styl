$accordion-icon-spin-duration = 200ms;

.blx-accordion-section {
  position: relative;
  overflow: hidden;
  padding: 2px;
}

.blx-accordion-trigger {
  position: relative;
  display: flex;
  align-items: center;
  height: 48px;
  line-height: 48px;
  padding: 0 16px;
  cursor: pointer;
  background-color: transparent;
  font-weight: $medium-weight;
    
    .blx-accordion-arrow {
      margin-right: 12px;
      transform: rotate(0deg);
      transition: transform $accordion-icon-spin-duration;
    }
}

.blx-accordion-content {
  max-height: 0;
  display: none;
  overflow: hidden;
  transition: max-height 0.25s;
  
  background-color: transparent;
}

input[type=checkbox][name='blx-accordion-tab'] {
  position: absolute;
  opacity: 0;
  z-index: -1;
  
  &:focus + .blx-accordion-trigger,
  &.blx-focus + .blx-accordion-trigger {
    outline: 1px solid $focus;
    color: $dark-00;
  }
  
  &:active + .blx-accordion-trigger,
  &.blx-active + .blx-accordion-trigger {
    color: $primary-00;
  }
  
  &:hover + .blx-accordion-trigger,
  &.blx-hover + .blx-accordion-trigger {
    color: $primary-01;
  }

  &:checked + .blx-accordion-trigger .blx-accordion-arrow {
    transform: rotate(90deg);
    transform-origin: center;
    transition: transform $accordion-icon-spin-duration;
  }
  
  &:checked ~ .blx-accordion-content {
    display: block;
    padding: 2px;
  }
}
