.blx-icon {
  display: inline-block
  width: 20px;
  height: 20px;
  flex: 0 0 auto;
  border: none;
  background-color: transparent;
  background-repeat: no-repeat;
}

.blx-icon-add, .blx-icon-plus {
  background-image: url('../svgs/icon-add.svg');
}

.blx-icon-back {
  background-image: url('../svgs/icon-back.svg');
}

.blx-icon-next, .blx-icon-forward {
  background-image: url('../svgs/icon-next.svg');
}

.blx-icon-down {
  background-image: url('../svgs/icon-down.svg');
}

.blx-icon-up {
  background-image: url('../svgs/icon-up.svg');
}

.blx-icon-close {
  background-image: url('../svgs/icon-close.svg');
}

.blx-icon-more, .blx-icon-more-horizontal {
  background-image: url('../svgs/icon-more.svg');
}

.blx-icon-more-vertical {
  background-image: url('../svgs/icon-more.svg');
  transform: rotate(90deg);
}

.blx-icon-success {
  background-image: url('../svgs/icon-success.svg');
}

.blx-icon-information {
  background-image: url('../svgs/icon-information.svg');
}

.blx-icon-warning {
  background-image: url('../svgs/icon-warning.svg');
}

.blx-icon-error {
  background-image: url('../svgs/icon-error.svg');
}

.blx-icon-drag {
  background-image: url('../svgs/icon-drag.svg');
}

.blx-icon-help {
  background-image: url('../svgs/icon-information.svg');
}

.blx-icon-loaded-check {
  background: url('../svgs/icon-success-secondary.svg');
  background-size: 100% 100%;
}

.blx-icon-loaded-check-green {
  background: url('../svgs/icon-success-primary.svg');
  background-size: 100% 100%;
}

@keyframes blx-loading-spinner-rotate
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)
    
.blx-loading-spinner {
  transform-origin: center;
  animation: blx-loading-spinner-rotate .55s infinite linear;
  transition: opacity 0.2s;
}

.blx-icon-loading-spinner {
  background: url('../svgs/icon-loading-spinner.svg');
  background-size: 100% 100%;
  animation blx-loading-spinner-rotate .55s infinite linear
  transition opacity 0.2s
}

.blx-icon-loading-spinner-dark {
  background: url('../svgs/icon-loading-spinner-dark.svg');
  background-size: 100% 100%;
  animation blx-loading-spinner-rotate .55s infinite linear
  transition opacity 0.2s
}
