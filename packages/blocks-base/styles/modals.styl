// modal specific variables
$modal-default-border = 1px solid $light-01;
$modal-background-color = $secondary-00;
$modal-overlay-background-color = $light-02;
$modal-padding = 24px 40px;

// modal styles
.blx-modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600px;
  max-height: 90%;
  z-index: 1001;
  padding: $modal-padding;

  display: flex;
  flex-direction: column;

  border-radius: 3px;

  border: $modal-default-border;
  background-color: $modal-background-color;
  box-shadow: $default-box-shadow;

  .blx-modal-close {
    position: absolute;
    top: 16px;
    right: 16px;
    background: transparent;
    border: none;
    padding: 0;
    cursor: pointer;

    svg:hover {
      fill: $primary-01
    }
  }
}

.blx-action-modal {
  padding: 0;
  
  .blx-modal-content {
    padding: $modal-padding;
  }
}

.blx-modal-buttons {
  justify-content: flex-end;
  padding: 12px 0 24px;
  border-top: 1px $light-01 solid;
}

.blx-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.5;
  z-index: 1000;

  background-color: $modal-overlay-background-color;
}

.blx-modal-content {
  display: flex;
  flex-direction: column;
  width: 100%;
  overflow: hidden;
}

.blx-modal-title {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
}

.blx-modal-icon {
  border-radius: 50%;
  width: 30px;
  height: 30px;
  margin-right: 15px;
}

// THEME //
.blx-success-modal {
  border-top: 4px solid $success;
  
  .blx-modal-icon {
    background: $success;
    fill: $white;
  }
}

.blx-information-modal {
  border-top: 4px solid $information;
  
  .blx-modal-icon {
    background: $information;
    fill: $white;
  }
}

.blx-warning-modal {
  border-top: 4px solid $warning;
  
  .blx-modal-icon {
    background: $warning;
    fill: $dark-00;
  }
}

.blx-error-modal {
  border-top: 4px solid $danger-00;
  
  .blx-modal-icon {
    background: $danger-00;
    fill: $white;
  }
}
