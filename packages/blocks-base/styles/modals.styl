// modal specific variables
$modal-default-border = 1px solid $light-01;
$modal-background-color = $secondary-00;
$modal-overlay-background-color = $light-02;

// modal styles
.blx-modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600px;
  max-height: 90%;
  padding: 24px 40px 32px 40px;
  z-index: 1001;

  display: flex;

  border-radius: 3px;

  border: $modal-default-border;
  background-color: $modal-background-color;
  box-shadow: $default-box-shadow;

  .blx-icon-close {
    position: absolute;
    top: 16px;
    right: 16px;
  }

  .blx-modal-buttons {
    display: flex;
    justify-content: flex-end;
  }
}

.blx-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.5;
  z-index: 1000;

  background-color: $modal-overlay-background-color;
}

.blx-modal-content {
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
