.blx-alert {
  position: relative;
  min-width: 392px;
  max-width: 762px;
  width: 90%;
  min-height: 80px;
  max-height: 222px;
  display: flex;
  border-top: 3px solid;
  border-radius: 0 0 $base-border-radius $base-border-radius;

  background-color: $secondary-00;
  box-shadow: $default-box-shadow;
}

.blx-alert-icon-container {
  position: relative;
  flex: 0 0 auto;
  margin: 16px;
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background-color: $light-01;

  .blx-alert-icon-background, .blx-alert-icon {
    position: absolute;
    top: 6px;
    left: 6px;
    border-radius: 50%;
  }

  .blx-alert-icon-background {
    width: 20px;
    height: 20px;
  }

  .blx-alert-icon {
    fill: $secondary-00;
  }
}

.blx-alert-text {
  padding: 24px 32px 24px 0;

  h4 + p {
    margin-top: 18px;
  }

  p {
    color: $base-font-color;
    margin-bottom: 18px;
  }
}

.blx-success .blx-alert-icon-background {
  background-color: $success;
}

.blx-warning .blx-alert-icon-background {
  background-color: $warning;
}

.blx-information .blx-alert-icon-background {
  background-color: $information;
}

.blx-error .blx-alert-icon-background {
  background-color: $danger-00;
}

.blx-alert-close {
  position: absolute;
  top: 16px;
  right: 16px;
  background: transparent;
  border: none;
  padding: 0;
  cursor: pointer;

  svg:hover {
    fill: $primary-01
  }
}
