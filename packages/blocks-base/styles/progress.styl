.blx-progress-dots {
  display: flex;
  
  .blx-progress-dot-container {
    position: relative;
    margin-right: 8px;
    
    input {
      position: absolute;
      left: -9999px;
      opacity: 0;
      cursor: pointer;
      
      &:checked ~ .blx-progress-dot {
        background-color: $primary-00;
      }
      
      &:focus ~ .blx-progress-dot {
        background-color: $focus;
      }
    }
    
    .blx-progress-dot {
      display: block;
      position: relative;
      height: 8px;
      width: 8px;
      border-radius: 50%;
      background-color: $light-01;

      &:hover {
        cursor: pointer;
        background-color: $focus;
      }
    }
  }
}
