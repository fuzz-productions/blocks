.blx-hidden {
  display: none;
}

.blx-disabled, :disabled {
  opacity: 0.35;
  pointer-events: none;
  user-select: none;
  cursor: default;
}

.blx-dark-bg {
  background-color: $dark-00;
  color: $secondary-00;
}

.blx-light-bg {
  background-color: $secondary-00;
  color: $dark-00;
}

.blx-no-scroll {
  overflow: hidden;
}

.blx-scrollable {
  overflow-y: auto;
}

// for cases where we don't want all children to dim from opacity change
// color changes will be handled by other classes via, e.g., &.blx-disabled-rgba
.blx-disabled-rgba {
  pointer-events: none;
  cursor: default;
  user-select: none;
}
