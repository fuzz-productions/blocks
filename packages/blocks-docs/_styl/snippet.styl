.snippet-container {
  border-radius: 7px;
  margin: 16px 0;
  border: 2px solid $light-01;
  
  .highlight {
    margin: 0;
    font-size: 14px;
    font-family: "Courier New";
  }
}

.snippet-left, .snippet-right {
  padding: 12px 16px;
  
  &:last-child {
    background-color: $light-00;
  }
}

.snippet-left {
  border-radius: 7px 0 0 7px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.snippet-right {
  border-radius: 0 7px 7px 0;
  overflow-x: auto;
}
