html, body {
  min-height: 100%;
  height: 100%;
}

.design-page {
  height: 100%;
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.design-page-header {
  padding: 0 5%;
}

.design-page-content {
  overflow-y: auto;
}

.design-page-section {
  margin-top: 32px;
}

.tall-content {
  height: 225px;
}

.doc-section {
  padding-left: 5%;
  padding-right: 5%;
  padding-bottom: 40px;
  border-bottom: solid 1px $light-01;
}

.doc-subsection {
  margin: 0 0 24px 0;
}

.doc-definition-title {
  flex: 0 0 150px;
}

.doc-definition-value {
  flex: 1;
}

.doc-state-title {
  flex: 0 0 150px;
}

.doc-state-content {
  flex: 1 0 150px;
}

.doc-state-title, .doc-state-content {
  margin: 24px 24px 24px 0;
}

.text-section-inline {
  margin-bottom: 24px;
  
  .blx-light {
    background-color: $dark-00;
  }
  span {
    display: inline-block;
    margin-right: 24px;
    &:last-child {
      margin-right: 0;
    }
  }
}

.writing-guidelines-list {
  list-style-type: disc;
  margin: 12px 24px;
  
  li {
    margin-bottom: 16px;
  }
}

.writing-guidelines-container {
  max-width: 800px;
  
  p {
    margin: 12px 0;
  }
  
  h3, h5 {
    margin: 24px 0 12px 0;
  }
}

.snippet-container {
  overflow: hidden;
  border-radius: 7px;
  margin: 16px 0;
  
  border: 2px solid $light-01;
  
  & > div {
    padding: 12px 16px;
    border-radius: 7 px;
    overflow-x: auto;
    
    &:last-child {
      background-color: $light-00;
    }
  }
  
  .highlight {
    margin: 0;
    * {
      font-size: 14px;
      font-family: "Courier New";
    }
  }
}

.sortable-list-preview {
  width: 300px;
  
  .blx-sortable-list {
    background-color: $light-01;
  }
  
  .blx-sortable-list-item {
    padding: 8px 16px;
  }
}
